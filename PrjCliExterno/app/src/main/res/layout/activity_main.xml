<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/clLayout"
    android:background="@drawable/vetorhosp"
    android:scaleType="fitCenter"
    tools:context=".MainActivity">


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroundgradient"
        android:backgroundTint="#993E8469"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.062"
        app:srcCompat="@drawable/logo" />

    <LinearLayout
        android:id="@+id/lnlPanel"

        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:orientation="vertical"
        android:background="@drawable/border"
        android:backgroundTint="@color/backgroundGreen"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.997">

        <Button
            android:id="@+id/btnMove"
            android:layout_width="150dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:backgroundTint="#FFFFFF"
            android:text=""
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/lblLog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:fontFamily="@font/poppinsbold"
            android:paddingLeft="100dp"
            android:paddingTop="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:text="Login"
            android:textColor="#FFFFFF"
            android:textFontWeight="200"
            android:textSize="45dp"
            tools:ignore="RtlHardcoded" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/border"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/textborder"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="InOrMmUsage">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingLeft="10dp"
                    android:text="E-mail"
                    android:textColor="@color/black"
                    android:textSize="15sp" />


                <EditText
                    android:id="@+id/txtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/textborder"
                    android:ems="10"
                    android:fontFamily="@font/poppinsbold"
                    android:hint="Email"
                    android:inputType="text"

                    android:paddingLeft="20dp"
                    android:text=""
                    android:textColor="#4D4D4D"
                    tools:ignore="TouchTargetSizeCheck" />

            </LinearLayout>






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/textborder"

                android:layout_marginTop="30dp"
                android:orientation="horizontal">



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/white"
                    android:layout_height="50dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    tools:ignore="InOrMmUsage">



                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:fontFamily="@font/poppins_medium"
                        android:paddingLeft="10dp"
                        android:text="Senha"
                        android:textColor="@color/black"
                        android:textSize="15sp" />


                    <EditText
                        android:id="@+id/txtSenha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:ems="10"
                        android:fontFamily="@font/poppinsbold"
                        android:gravity="left"
                        android:hint="Senha"

                        android:paddingLeft="20dp"
                        android:inputType="textPassword"
                        android:text=""
                        android:textColor="#4D4D4D"
                        tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />




                </LinearLayout>





                <Button
                    android:id="@+id/btnShow"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:text=""
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/eyeclosed"
                    app:backgroundTint="@null"
                    android:backgroundTint="@color/black"
                    android:layout_marginRight="5dp"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/BtnEntrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"


            android:layout_marginRight="30dp"
            android:backgroundTint="@color/buttonGreen"

            android:fontFamily="@font/poppinsbold"

            android:text="Entrar"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btnForgetSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="@font/poppins_semibold"

            android:text="Esqueci Minha Senha"
            android:textColor="#ffffff"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>